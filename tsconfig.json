{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["api/*"],
            "@tests/*": ["tests/*"],
            "*": ["node_modules/*"]
        },
        "types": ["jest", "node"],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "api/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "coverage"
    ]
}