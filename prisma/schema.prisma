datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
    output   = "../prisma_client"
}

enum TaskStatus {
    OPEN
    IN_PROGRESS
    MARKED_AS_COMPLETED
    COMPLETED
}

enum TransactionCategory {
    BOUNTY
    SWAP_USDC
    SWAP_XLM
    WITHDRAWAL
    TOP_UP
}

enum RuleType {
    CODE_QUALITY
    SECURITY
    PERFORMANCE
    DOCUMENTATION
    TESTING
    CUSTOM
}

enum RuleSeverity {
    LOW
    MEDIUM
    HIGH
    CRITICAL
}

enum ReviewStatus {
    PENDING
    IN_PROGRESS
    COMPLETED
    FAILED
}

model Wallet {
    address         String        @id @unique
    encryptedDEK    String
    encryptedSecret String
    iv              String
    authTag         String
    user            User?         @relation(fields: [userId], references: [userId])
    userId          String?       @unique
    installation    Installation? @relation(fields: [installationId], references: [id])
    installationId  String?       @unique

    @@index([installationId])
    @@index([userId])
}

model User {
    userId                      String                       @id
    username                    String                       @unique
    wallet                      Wallet?
    contributionSummary         ContributionSummary?
    addressBook                 Json[]                       @default([])
    createdAt                   DateTime                     @default(now())
    updatedAt                   DateTime                     @updatedAt
    createdTasks                Task[]                       @relation("TaskCreator")
    contributedTasks            Task[]                       @relation("TaskContributor")
    installations               Installation[]               @relation("UserInstallations")
    userInstallationPermissions UserInstallationPermission[]
    transactions                Transaction[]
    tasksAppliedFor             Task[]                       @relation("UserApplications")
    taskSubmissions             TaskSubmission[]
    taskActivities              TaskActivity[]
}

model ContributionSummary {
    id             String @id @default(cuid())
    tasksCompleted Int    @default(0)
    activeTasks    Int    @default(0)
    totalEarnings  Float  @default(0.0)
    user           User   @relation(fields: [userId], references: [userId], onDelete: Cascade)
    userId         String @unique
}

model SubscriptionPackage {
    id            String         @id @default(cuid())
    name          String
    description   String
    maxTasks      Int
    maxUsers      Int
    paid          Boolean        @default(true)
    price         Float
    active        Boolean        @default(true)
    createdAt     DateTime       @default(now())
    updatedAt     DateTime       @updatedAt
    installations Installation[]
}

model Installation {
    id                          String                       @id
    htmlUrl                     String
    targetId                    Int
    targetType                  String
    account                     Json // { login String nodeId String avatarUrl String htmlUrl String }
    wallet                      Wallet?
    subscriptionPackage         SubscriptionPackage?         @relation(fields: [subscriptionPackageId], references: [id], onDelete: SetNull)
    subscriptionPackageId       String?
    createdAt                   DateTime                     @default(now())
    updatedAt                   DateTime                     @updatedAt
    tasks                       Task[]                       @relation("InstallationTasks")
    users                       User[]                       @relation("UserInstallations")
    userInstallationPermissions UserInstallationPermission[]
    transactions                Transaction[]
    taskSubmissions             TaskSubmission[]
    aiReviewRule                AIReviewRule[]
    aiReviewResult              AIReviewResult[]

    @@index([createdAt])
}

